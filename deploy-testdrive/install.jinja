resources:
- name: openshift
  type: openshift.jinja
  properties:
    zone: us-central1-a
    image-base: https://www.googleapis.com/compute/v1/projects/openshift-test-drive/global/images/family/ocp311-base
    image-docker: https://www.googleapis.com/compute/v1/projects/openshift-test-drive/global/images/family/ocp311-docker
    mtype: n1-standard-4

outputs:
- name: OpenShiftConsole
  value: $(ref.openshift.OpenShiftConsole)
- name: user
  value: $(ref.openshift.user)
- name: password
  value: $(ref.openshift.password)
